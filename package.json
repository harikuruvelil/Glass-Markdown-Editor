{
  "name": "markdown-notes-app",
  "version": "1.0.1",
  "description": "A beautiful Markdown viewer and editor for Windows",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "powershell -ExecutionPolicy Bypass -File src-tauri/create-icon.ps1 && set \"CARGO_TARGET_DIR=..\\target-tauri\" && tauri dev",
    "tauri:build": "set \"FORCE_ICON_RELINK=1\" && powershell -ExecutionPolicy Bypass -File src-tauri/create-icon.ps1 && set \"CARGO_TARGET_DIR=..\\target-tauri\" && tauri build"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tiptap/extension-image": "^2.1.0",
    "@tiptap/extension-link": "^2.1.0",
    "@tiptap/extension-task-item": "^2.1.0",
    "@tiptap/extension-task-list": "^2.1.0",
    "@tiptap/react": "^2.1.0",
    "@tiptap/starter-kit": "^2.1.0",
    "markdown-it": "^14.0.0",
    "prosemirror-markdown": "^1.13.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shiki": "^1.0.0",
    "turndown": "^7.2.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@types/markdown-it": "^13.0.7",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/turndown": "^5.0.6",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
